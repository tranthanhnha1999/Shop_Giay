@model ShopGiay.Models.Nguoi_dung

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.jss"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .Register-Form {
            padding: 5px;
            width: 100%;
            max-width: 600px;
            margin: 20px auto;
            background-color: #ffffff;
            border: 5px inset pink;
            border-radius: 50px;
            text-align: center;
            background-image: linear-gradient(-225deg, #E3FDF5 0%, #FFE6FA 100%);
        }

        * {
            box-sizing: border-box;
        }

        .input-container {
            display: flex;
            width: 100%;
            margin-bottom: 10px;
        }

        .form {
            text-align: center;
            padding-left: 5px;
        }

        .icon {
            padding: 10px;
            color: fuchsia;
            min-width: 50px;
        }


        .input-field {
            width: 100%;
            padding: 3px;
            outline: none;
        }

            .input-field:focus {
                border: 2px solid dodgerblue;
            }

        /* Set a style for the submit button */
        .btn {
            background-color: deeppink;
            color: white;
            padding: 15px 20px;
            border: none;
            cursor: pointer;
            width: 40%;
            opacity: 0.9;
        }

            .btn:hover {
                opacity: 1;
            }
    </style>
</head>
<body>
    @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="Register-Form">
            <form action="" style="max-width:500px;margin:auto; ">
                <h2 style="color:deeppink">Đăng Ký</h2>
                <div class="input-container">
                    <div class="col-6">
                        <h4 class="fa fa-user icon"> Họ và tên :</h4>
                    </div>
                    <div class="form">
                        @Html.EditorFor(model => model.Ten_Nguoidung, new { htmlAttributes = new { required = "required" } })

                    </div>

                </div>
                <div>
                    <p>@Html.ValidationMessageFor(model => model.Ten_Nguoidung, "", new { @class = "text-danger" })</p>
                </div>
                <div class="input-container">
                    <div class="col-6">
                        <h4 class="form fa fa-birthday-cake icon "> Ngày Sinh :</h4>
                    </div>
                    <div class="form">
                        @Html.EditorFor(model => model.Ngay_sinh, new { htmlAttributes = new { required = "required", Type = "date" } })

                    </div>

                </div>
                <div>
                    <p>@Html.ValidationMessageFor(model => model.Ngay_sinh, "", new { @class = "text-danger" })</p>
                </div>

                <div class="input-container">
                    <div style="text-align:center;" class="col-6">
                        <h4 class="fa fa-address-book icon"> Đia chỉ :</h4>
                    </div>
                    <div class="form">
                        @Html.EditorFor(model => model.Dia_chi, new { htmlAttributes = new { required = "required" } })

                    </div>

                </div>
                <div>
                    <p>@Html.ValidationMessageFor(model => model.Dia_chi, "", new { @class = "text-danger" })</p>
                </div>
                <div class="input-container">
                    <div style="text-align:center;" class="col-6">
                        <h4 class="fa fa-envelope icon"> Email :</h4>
                    </div>
                    <div class="form">
                        
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new {
                       pattern = "^[_A-Za-z0-9-\\+]+(\\.[_A-Za-z0-9-]+)*@"
                                                                            + "[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$",
                       required = "required",
                       title = "Đây không phải là email vui lòng nhập lại"
                   } })

                    </div>

                </div>
                <div>
                    <p>@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</p>
                </div>
                <div>
                    <p>
                        @if (ViewBag.loiEmail != null)
                        {
                            <span>@ViewBag.loiEmail</span>
                        }
                    </p>

                </div>
                <div class="input-container">
                    <div style="text-align:center;" class="col-6">
                        <h4 class="fa fa-phone-square icon"> Số điện thoại :</h4>
                    </div>
                    <div style="text-align:center;" class="form">
                        @Html.EditorFor(model => model.So_DT, new { htmlAttributes = new { pattern ="^(0?)(3[2-9]|5[6|8|9]|7[0|6-9]|8[0-6|8|9]|9[0-4|6-9])[0-9]{7}$", required = "required", title = "Vui lòng nhập đúng số điện thoại, đủ 10 ký tự." } })

                    </div>

                </div>
                <div>
                    <p>@Html.ValidationMessageFor(model => model.So_DT, "", new { @class = "text-danger" })</p>
                </div>
                <div class="input-container">
                    <div style="text-align:center;" class="col-6">
                        <h4 class="fa fa-user icon"> Tài Khoản :</h4>
                    </div>
                    <div class="form">
                        @Html.EditorFor(model => model.Tai_Khoan, new { htmlAttributes = new { required = "required" } })

                    </div>

                </div>
                <div>
                    <p>@Html.ValidationMessageFor(model => model.Tai_Khoan, "", new { @class = "text-danger" })</p>
                </div>
                <div>
                    <p>
                        @if (ViewBag.loitaikhoan != null)
                        {
                            <span>@ViewBag.loitaikhoan</span>
                        }
                    </p>

                </div>
                <div class="input-container">
                    <div style="text-align:center;" class="col-6">
                        <h4 class="fa fa-key icon"> Mật khẩu :</h4>
                    </div>
                    <div class="form">
                        <input type="password" id="Mat_Khau" name="Mat_Khau" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Vui lòng nhập đủ 8 ký tự ,Viết hoa , số ,viết thường" />
                        @*@Html.EditorFor(model => model.Mat_Khau, new { htmlAttributes = new { required = "required" } })*@
                    </div>

                </div>
                <div>
                    <p>@Html.ValidationMessageFor(model => model.Mat_Khau, "", new { @class = "text-danger" })</p>
                </div>




                <button type="submit" class="btn">Đăng ký<i class="fa fa-user-plus icon"></i></button>
            </form>
        </div>
    }
</body>
</html>

