@model IEnumerable<ShopGiay.Models.Danh_muc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}
<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 50%;
        margin: auto;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        #customers tr:nth-child(even) {
            background-image: linear-gradient(-225deg, #E3FDF5 0%, #FFE6FA 100%);
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #2a9fd6;
            color: white;
            text-align: center;
        }
</style>
<section class="is-title-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <ul>
            <li>Admin</li>
            <li>Danh mục</li>
        </ul>
    </div>
</section>
<section class="is-hero-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <h1 class="title">
            Danh mục
        </h1>
        <button class="button light"><a href="@Url.Action("Create","Danhmuc")">Thêm mới</a></button>
    </div>
</section>
<table id="customers">
    <tr>
        <th>Tên danh mục</th>
        <th>Tên nhóm danh mục</th>
        <th>Trạng thái</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Ten_Danhmuc</td>
    <td>@item.Nhom_Danh_Muc.Ten_Nhom_Danh_muc</td>
    <td>@item.Trangthai</td>
    <td>
        <a href="@Url.Action("Edit","Danhmuc",new { id = item.ID_Danhmuc })"><img src="~/Asset/images/edit .png" /></a>
        <a href="@Url.Action("Details","Danhmuc",new { id = item.ID_Danhmuc })"><img src="~/Asset/images/loupe.png" /></a>
        <a href="@Url.Action("Delete","Danhmuc",new { id = item.ID_Danhmuc })"><img src="~/Asset/images/delete .png" /></a>
    </td>
</tr>

    }

</table>
