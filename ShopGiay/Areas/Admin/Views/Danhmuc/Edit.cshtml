@model ShopGiay.Models.Danh_muc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <header class="card-header">
        <p class="card-header-title">
            <span class="icon"><i class="mdi mdi-ballot"></i></span>
            Sửa Danh mục
        </p>
    </header>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_Danhmuc)

    <div class="form-group">
        @Html.LabelFor(model => model.ID_Nhom_Danh_Muc, "ID_Nhom_Danh_Muc", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ID_Nhom_Danh_Muc", (IEnumerable<SelectListItem>)ViewBag.id_ndm, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_Nhom_Danh_Muc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ten_Danhmuc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ten_Danhmuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ten_Danhmuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <div class="field grouped">
        <div class="control">
            <button type="submit" class="button green">
                Lưu
            </button>
        </div>
        <div class="control">
            <button type="reset" class="button red">
                <a href="@Url.Action("Index","Nhomdanhmuc")">Quay lại</a>
            </button>
        </div>
    </div>
</div>
}

