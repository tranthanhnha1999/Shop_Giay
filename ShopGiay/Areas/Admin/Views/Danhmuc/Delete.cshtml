        @Html.AntiForgeryToken()

        <div class="field grouped">
            <div class="control">
                <button type="submit" class="button green">
                    Xóa
                </button>
            </div>
            <div class="control">
                <button type="reset" class="button red">
                    <a href="@Url.Action("Index", "Danhmuc")">Quay lại</a>
                </button>
            </div>

        </div>
    }
</div>
