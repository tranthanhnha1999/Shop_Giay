@model IEnumerable<ShopGiay.Models.Don_hang>
@using ShopGiay.Models
@{
    ViewBag.Title = "Lichsumh";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <title>Footwear - Free Bootstrap 4 Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Rokkitt:100,300,400,700" rel="stylesheet">

    <!-- Animate.css -->
    <link rel="stylesheet" href="css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="css/icomoon.css">
    <!-- Ion Icon Fonts-->
    <link rel="stylesheet" href="css/ionicons.min.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <!-- Magnific Popup -->
    <link rel="stylesheet" href="css/magnific-popup.css">

    <!-- Flexslider  -->
    <link rel="stylesheet" href="css/flexslider.css">

    <!-- Owl Carousel -->
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <link rel="stylesheet" href="css/owl.theme.default.min.css">

    <!-- Date Picker -->
    <link rel="stylesheet" href="css/bootstrap-datepicker.css">
    <!-- Flaticons  -->
    <link rel="stylesheet" href="fonts/flaticon/font/flaticon.css">

    <!-- Theme style  -->
    <link rel="stylesheet" href="css/style.css">


    <div class="colorlib-loader"></div>

    <div id="page">


        <div class="breadcrumbs">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <p class="bread"><span><a href="index.html">Trang chủ</a></span> / <span>Lịch sử mua hàng</span></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row row-pb-lg">
                <div class="col-md-12">
                    <div class="product-name d-flex">
                        <div class="one-eight text-center">
                            <span>STT</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>ID Đơn hàng</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Ngày đặt hàng</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>ID Nhân viên</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Tên nhân viên</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Trạng thái</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Chi tiết</span>
                        </div>
                    </div>
                    @{int stt = 1; }
                    @foreach (var item in Model)
                    {
                        <div class="product-cart d-flex">
                            <div class="one-eight text-center">
                                <span class="display-tc">
                                    @stt @{stt++;}
                                </span>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <span>@item.ID_Donhang</span>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <span>@item.Ngay_Dat_hang</span>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <span>@item.ID_Nhanvien</span>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <span></span>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    @if (item.Trangthai == 0)
                                    {<span> Đang xử lý</span>}
                                    @if (item.Trangthai == 1)
                                    {<span> Đang giao hàng</span>}
                                    @if (item.Trangthai == 2)
                                    {<span> Đã thanh toán</span>}
                                    @if (item.Trangthai == 3)
                                    {<span> Đã hủy</span>}



                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <a href="@Url.Action("Detaildh", new { id = @item.ID_Donhang })" > Chi tiết</a>
                                </div>
                            </div>
                </div>
                    }

                </div>
            </div>

        </div>
    </div>

    <!-- jQuery -->
    <script src="js/jquery.min.js"></script>
    <!-- popper -->
    <script src="js/popper.min.js"></script>
    <!-- bootstrap 4.1 -->
    <script src="js/bootstrap.min.js"></script>
    <!-- jQuery easing -->
    <script src="js/jquery.easing.1.3.js"></script>
    <!-- Waypoints -->
    <script src="js/jquery.waypoints.min.js"></script>
    <!-- Flexslider -->
    <script src="js/jquery.flexslider-min.js"></script>
    <!-- Owl carousel -->
    <script src="js/owl.carousel.min.js"></script>
    <!-- Magnific Popup -->
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/magnific-popup-options.js"></script>
    <!-- Date Picker -->
    <script src="js/bootstrap-datepicker.js"></script>
    <!-- Stellar Parallax -->
    <script src="js/jquery.stellar.min.js"></script>
    <!-- Main -->
    <script src="js/main.js"></script>




