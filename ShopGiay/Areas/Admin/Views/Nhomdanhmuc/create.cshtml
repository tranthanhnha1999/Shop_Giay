@model ShopGiay.Models.Nhom_Danh_Muc

@{
    ViewBag.Title = "create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.jss"></script>
<script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin:auto;">
    <header class="card-header">
        <p class="card-header-title">
            <span class="icon"><i class="mdi mdi-ballot"></i></span>
            Thêm mới Nhóm danh mục 
        </p>
    </header>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ID_Nhom_Danh_muc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ID_Nhom_Danh_muc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ID_Nhom_Danh_muc, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        <p>
            @if (ViewBag.checkidndm != null)
            {
                <span>@ViewBag.checkidndm</span>
            }
        </p>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ten_Nhom_Danh_muc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ten_Nhom_Danh_muc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ten_Nhom_Danh_muc, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="field grouped">
        <div class="control">
            <button type="submit" class="button green">
                Khởi tạo
            </button>
        </div>
        <div class="control">
            <button type="reset" class="button red">
                <a href="@Url.Action("Index","Nhomdanhmuc")">Quay lại</a>
            </button>
        </div>
    </div>

</div>
}

