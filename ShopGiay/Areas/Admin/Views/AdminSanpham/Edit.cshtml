@model ShopGiay.Models.San_pham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}
<style>
    input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

    div {
        border-radius: 5px;
        padding: 20px;
    }
</style>

@using (Html.BeginForm("Edit", "AdminSanpham", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <header class="card-header">
        <p class="card-header-title">
            <span class="icon"><i class="mdi mdi-ballot"></i></span>
            Sửa Sản phẩm
        </p>
    </header>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_Sanpham)

    <label for="lname">Tên sản phẩm</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Tensanpham, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Tensanpham, "", new { @class = "text-danger" })
    </div>


    <label for="lname">Trạng thái</label>
    <div class="col-md-10">
        @Html.DropDownList("ID_Khuyenmai", (IEnumerable<SelectListItem>)ViewBag.idKhuyenmai, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ID_Khuyenmai, "", new { @class = "text-danger" })
    </div>


    <label for="lname">Trạng thái</label>
    <div class="col-md-10">
        @Html.DropDownList("ID_Danh_Muc", (IEnumerable<SelectListItem>)ViewBag.idDanhmuc, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ID_Danh_Muc, "", new { @class = "text-danger" })
    </div>


    <label for="lname">Trạng thái</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
    </div>


    <label for="lname">Trạng thái</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
    </div>



    <label for="lname">Trạng thái</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Ngaycapnhat, new { htmlAttributes = new { @class = "form-control", Type = "date", @Value = Model.Ngaycapnhat.Value.ToString("yyyy-MM-dd") } })
        @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
    </div>

    <label for="lname">Trạng thái</label>
    <select id="country" name="Trangthai">
        <option value="0">Tồn tại</option>
        <option value="1">Đã xóa</option>
    </select>


    <br />
    <div class="field grouped">
        <div class="control">
            <button type="submit" class="button green">
                Sửa
            </button>
        </div>
        <div class="control">
            <button type="reset" class="button red">
                <a href="@Url.Action("Index","AdminSanpham")">Quay lại</a>
            </button>
        </div>
    </div>
</div>
}

