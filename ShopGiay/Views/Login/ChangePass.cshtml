
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Login</title>
    <style>

        .Login-form {
            width: 100%;
            max-width: 400px;
            margin: 20px auto;
            background-color: #ffffff;
            border: 5px inset pink;
            border-radius: 30px;
            text-align: center;
            background-image: linear-gradient(-225deg, #E3FDF5 0%, #FFE6FA 100%);
        }

        .input-box {
            padding-top: 15px;
        }

        .btn-box {
            padding-top: 15px;
            padding-bottom: 10px;
            color: black;
        }

        .icon {
            padding: 10px;
            background: pink;
            color: white;
            min-width: 50px;
            text-align: center;
        }

        .input-field {
            width: 50%;
            padding: 8px;
            outline: none;
        }

        h1 {
            color: deeppink;
        }
    </style>
   
</head>
<br />
<body>
    <div class="Login-form">
        <form action="" method="post">
            <h1>Đổi mật khẩu </h1>
            <div class="input-box">
                <i class="fa fa-user icon"></i>
                <input class="input-field" type="text" name="Email" id="username" placeholder="Nhập Email" value="@ViewBag.Email" readonly />
                <div class="text-warning"><label id="error_us"></label></div>
            </div>
            <div class="input-box">
                <i class="fa fa-user icon"></i>
                <input class="input-field" type="text" name="Code" id="username" placeholder="Nhập code" required/>
                <div class="text-warning"><label id="error_us"></label></div>
            </div>
            <div>
                <p>
                    @if (ViewBag.loicode != null)
                    {
                        <span>@ViewBag.loicode</span>
                    }
                </p>

            </div>
            <div class="input-box">
                <i class="fa fa-key icon"></i>
                <input class="input-field" type="password" name="password" id="password" placeholder="Nhập mật khẩu mới" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Vui lòng nhập đủ 8 ký tự ,Viết hoa , số ,viết thường" required/>
                <div class="text-warning"><label id="error_pw"></label></div>
            </div>
            <div class="btn-box">
                <button type="submit" class="btn btn-outline-danger" style="color:deeppink">Đổi mật khẩu </button>

            </div>
            <div class="btn-box">
                <a href="@Url.Action("Register","Login")" style="color:deeppink">Đăng Ký</a>
            </div>
        </form>
    </div>
</body>
</html>

