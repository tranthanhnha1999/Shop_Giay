@model ShopGiay.Models.Nhom_Danh_Muc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<h3 style="color:cornflowerblue">Bạn có chắc muốn xóa sản phẩm này ?</h3>
<div>
    <header class="card-header">
        <p class="card-header-title">
            <span class="icon"><i class="mdi mdi-ballot"></i></span>
            Xóa Nhóm danh mục
        </p>
    </header>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Nhóm danh mục
        </dt>
        <br />
        <dd style="color: cornflowerblue">
            @Html.DisplayFor(model => model.Ten_Nhom_Danh_muc)
        </dd>
        <br />
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="field grouped">
            <div class="control">
                <button type="submit" class="button green">
                    Xóa
                </button>
            </div>
            <div class="control">
                <button type="reset" class="button red">
                    <a href="@Url.Action("Index", "Nhomdanhmuc")">Quay lại</a>
                </button>
            </div>

        </div>
    }
</div>
