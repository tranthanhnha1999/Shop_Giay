<div>
    <header class="card-header">
        <p class="card-header-title">
            <span class="icon"><i class="mdi mdi-ballot"></i></span>
            Xóa Nhóm danh mục
        </p>
    </header>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ten_Danhmuc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ten_Danhmuc)
