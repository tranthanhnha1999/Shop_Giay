@model ShopGiay.Models.AdminSanpham
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Create", "AdminSanpham", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <header class="card-header">
        <p class="card-header-title">
            <span class="icon"><i class="mdi mdi-ballot"></i></span>
            Thêm Sản phẩm
        </p>
    </header>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Tên sản phẩm
        <div class="col-md-10">
            @Html.EditorFor(model => model.san_Pham.Tensanpham, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.san_Pham.Tensanpham, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Khuyễn mãi
        <div class="col-md-10">
            @Html.DropDownList("ID_Khuyenmai", (IEnumerable<SelectListItem>)ViewBag.idKhuyenmai, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.san_Pham.ID_Khuyenmai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        ID Danh Mục
        <div class="col-md-10">
            @Html.DropDownList("ID_Danh_Muc", (IEnumerable<SelectListItem>)ViewBag.idDanhmuc, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.san_Pham.ID_Danh_Muc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Mô tả
        <div class="col-md-10">
            @Html.EditorFor(model => model.san_Pham.Mota, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.san_Pham.Mota, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Giá
        <div class="col-md-10">
            @Html.EditorFor(model => model.san_Pham.Gia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.san_Pham.Gia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ngày cập nhật 
        <div class="col-md-10">
            @Html.EditorFor(model => model.san_Pham.Ngaycapnhat, new { htmlAttributes = new { @class = "form-control", Type = "date" } })
            @Html.ValidationMessageFor(model => model.san_Pham.Ngaycapnhat, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        Hình chính
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.hinh_Anh.Hinhchinh, new { htmlAttributes = new { @class = "form-control"} })*@
            <label class="upload control">
                <a class="button blue">
                    Thêm ảnh
                </a>
                <input type="file" name="Images">
            </label>
            @Html.ValidationMessageFor(model => model.hinh_Anh.Hinhchinh, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        Hình 1 
        <div class="col-md-10">

            <label class="upload control">
                <a class="button blue">
                    Thêm ảnh
                </a>
                <input type="file" name="Images1">
            </label>
            @*@Html.EditorFor(model => model.hinh_Anh.Hinh1, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.hinh_Anh.Hinh1, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        Hình 2
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.hinh_Anh.Hinh2, new { htmlAttributes = new { @class = "form-control"} })*@
            <label class="upload control">
                <a class="button blue">
                    Thêm ảnh
                </a>
                <input type="file" name="Images2">
            </label>
            @Html.ValidationMessageFor(model => model.hinh_Anh.Hinh2, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="field grouped">
        <div class="control">
            <button type="submit" class="button green">
                Thêm
            </button>
        </div>
        <div class="control">
            <button type="reset" class="button red">
                <a href="@Url.Action("Index","AdminSanpham")">Quay lại</a>
            </button>
        </div>
    </div>
</div>
}

